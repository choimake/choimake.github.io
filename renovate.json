{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":dependencyDashboard",
    ":prConcurrentLimit10"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 09:00 and before 18:00 every weekday"
  ],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "vulnerabilityAlerts": {"enabled": true},
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 7am on monday"],
    "automerge": true,
    "automergeType": "branch"
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies",
      "automerge": true,
      "automergeType": "pr",
      "prCreation": "not-pending"
    },
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["tailwindcss"],
      "groupName": "tailwindcss",
      "separateMinorPatch": true
    }
  ]
}

